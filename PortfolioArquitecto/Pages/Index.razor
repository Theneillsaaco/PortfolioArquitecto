@page "/"
@inject IJSRuntime JSRuntime

<PageTitle>Arquitecto - Portfolio Personal</PageTitle>

<section class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <div class="container">
            <div class="row align-items-center min-vh-100">
                <div class="col-12 text-center">
                    <div class="hero-text animate-on-scroll">
                        <div class="hero-profile-image mb-4">
                            <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=300&q=80" 
                                 class="profile-hero-img" 
                                 alt="Arquitecto" />
                        </div>
                        <h1 class="hero-title">
                            Hola, soy <span class="text-accent">Alejandro Martínez</span>
                        </h1>
                        <h2 class="hero-subtitle-role">
                            Arquitecto & Diseñador
                        </h2>
                        <p class="hero-subtitle">
                            Transformo ideas en espacios que cuentan historias. Con más de 8 años 
                            creando arquitectura que conecta con las emociones y necesidades humanas, 
                            cada proyecto es una nueva aventura de diseño y creatividad.
                        </p>
                        <div class="hero-buttons">
                            <Button Color="ButtonColor.Primary"
                                    Size="ButtonSize.Large"
                                    Class="hero-btn-primary me-3"
                                    @onclick="ScrollToProyectos">
                                <Icon Name="IconName.Grid3X3Gap" class="me-2" />
                                Ver Mi Trabajo
                            </Button>
                            <Button Color="ButtonColor.Primary"
                                    Size="ButtonSize.Large"
                                    Class="hero-btn-primary me-3"
                                    @onclick="ScrollToSobreMi">
                                <Icon Name="IconName.Person" class="me-2" />
                                Conoce Mi Historia
                            </Button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="scroll-indicator">
        <div class="scroll-arrow" @onclick="ScrollToSobreMi">
            <Icon Name="IconName.ChevronDown" />
        </div>
    </div>
</section>

<section id="sobre-mi" class="about-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 mb-5 mb-lg-0">
                <div class="about-image-container animate-on-scroll">
