@page "/"
@inject IJSRuntime JSRuntime

<PageTitle>Arquitecto - Portfolio Personal</PageTitle>

<section class="hero-modern">
    <div class="hero-bg-overlay" />
    <div class="container-fluid h-100">
        <div class="row align-items-center h-100">
            <div class="col-lg-6 hero-content-left">
                <div class="hero-text-modern">
                    <div class="greeting-badge">
                        <span class="greeting-icon">👋</span>
                        <span>Hola, soy</span>
                    </div>
                    <h1 class="hero-name">
                        Andrys
                        <span class="surname">Santana</span>
                    </h1>
                    <div class="role-container">
                        <span class="role-title">Arquitecto</span>
                        <span class="role-divider">•</span>
                        <span class="role-title">Diseñador</span>
                    </div>
                    <p class="hero-description">
                        Creo espacios que cuentan historias y conectan emociones.
                        Con más de 3 años transformando ideas en realidades arquitectónicas únicas.
                    </p>
                    <div class="hero-stats">
                        <div class="stat-item">
                            <span class="stat-number">45+</span>
                            <span class="stat-label">Proyectos</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">3+</span>
                            <span class="stat-label">Años</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">15</span>
                            <span class="stat-label">Premios</span>
                        </div>
                    </div>
                    <div class="hero-actions">
                        <Button Color="ButtonColor.Primary"
                                Size="ButtonSize.Large"
                                Class="btn-primary-modern me-3"
                                @onclick="ScrollToProyectos">
                            <Icon Name="IconName.Grid3X3Gap" class="me-2" />
                            Ver Mi Trabajo
                        </Button>
                        <Button Color="ButtonColor.Primary"
                                Size="ButtonSize.Large"
                                Class="btn-secondary-modern"
                                @onclick="ScrollToContacto">
                            <Icon Name="IconName.ChatDots" class="me-2" />
                            Contactar
                        </Button>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6 hero-visual">
                <div class="hero-image-container">
                    <div class="floating-card card-1">
                        <img src="https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" 
                             alt="Proyecto 1" class="project-thumb" />
                        <div class="card-info">
                            <span class="project-name">Casa Los Alanis</span>
                            <span class="project-year">2023</span>
                        </div>
                    </div>
                    <div class="floating-card card-2">
                        <img src="https://images.unsplash.com/photo-1600047509358-9dc75507daeb?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" 
                             alt="Proyecto 2" class="project-thumb" />
                        <div class="card-info">
                            <span class="project-name">Oficinas Bambú</span>
                            <span class="project-year">2022</span>
                        </div>
                    </div>
                    <div class="main-portrait">
                        <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80" 
                             alt="Alejandro Martínez" class="portrait-img" />
                        <div class="experience-badge-hero">
                            <span class="badge-number">3+</span>
                            <span class="badge-text">Años</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="scroll-indicator-modern" @onclick="ScrollToSobreMi">
        <div class="mouse-scroll">
            <div class="scroll-wheel" />
        </div>
        <span class="scroll-text">Scroll</span>
    </div>
</section>

<section id="sobre-mi" class="about-modern">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 mb-5 mb-lg-0">
                <div class="about-visual-modern">
                    <div class="about-image-main">
                        <img src="https://images.unsplash.com/photo-1600566753151-384129cf4e3e?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
                             alt="Alejandro en su estudio" class="img-fluid rounded-image main-about-img" />
                    </div>
                    <div class="about-decorative-elements">
                        <div class="element-1" />
                        <div class="element-2" />
                        <div class="element-3" />
                    </div>
                </div>
            </div>
            
            <div class="col-lg-7">
                <div class="about-content-modern">
                    <div class="section-badge">
                        <Icon Name="IconName.Person" class="me-2" />
                        Sobre mi
                    </div>
                    <h2 class="section-title-modern">
                        Transformando ideas en
                        <span class="highlight">espacios unicos</span>
                    </h2>

                    <p class="section-description">
                        Mi pasión por la arquitectura nació de la fascinación por cómo los espacios
                        pueden transformar vidas. Desde Santiago, República Dominicana, he desarrollado
                        una filosofía de diseño que combina funcionalidad inteligente, belleza atemporal
                        y sostenibilidad responsable.
                    </p>
                    <div class="philosophy-points">
                        <div class="point-item">
                            <div class="point-icon">
                                <Icon Name="IconName.Lightbulb" />
                            </div>
                            <div class="point-content">
                                <h6>Diseño Inteligente</h6>
                                <p>Cada espacio debe contar una historia única</p>
                            </div>
                        </div>
                        <div class="point-item">
                            <div class="point-icon">
                                <Icon Name="IconName.Heart" />
                            </div>
                            <div class="point-content">
                                <h6>Conexión Emocional</h6>
                                <p>Arquitectura que conecta con las emociones</p>
                            </div>
                        </div>
                        <div class="point-item">
                            <div class="point-icon">
                                <Icon Name="IconName.Leaf" />
                            </div>
                            <div class="point-content">
                                <h6>Sostenibilidad</h6>
                                <p>Respeto por el contexto cultural y ambiental</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="experience-modern">
    <div class="container">
        <div class="text-center mb-5">
            <div class="section-badge">
                <Icon Name="IconName.Clock" Class="me-2" />
                Mi Trayectoria
            </div>
            <h2 class="section-title-modern">
                Momentos que definen
                <span class="highlight">mi carrera</span>
            </h2>
        </div>

        <div class="timeline-modern">
            <div class="timeline-item-modern" data-year="2016">
                <div class="timeline-content-modern">
                    <div class="timeline-header">
                        <h4>Graduación en Arquitectura</h4>
                    </div>
                    <p>Pontificia Universidad Católica Madre y Maestra (PUCMM). Proyecto de tesis: "Vivienda Social Sostenible en el Caribe".</p>
                </div>
            </div>

            <div class="timeline-item-modern" data-year="2017">
                <div class="timeline-content-modern">
                    <div class="timeline-header">
                        <h4>Primer Proyecto Independiente</h4>
                    </div>
                    <p>Casa residencial en Santiago que marcó el inicio de mi carrera como arquitecto independiente. Un proyecto que definió mi estilo personal.</p>
                </div>
            </div>

            <div class="timeline-item-modern" data-year="2019">
                <div class="timeline-content-modern">
                    <div class="timeline-header">
                        <h4>Reconocimiento Nacional</h4>
                        <span class="timeline-year">2019</span>
                    </div>
                    <p>Premio "Joven Arquitecto del Año" - Centro Comunitario en Moca</p>
                </div>
            </div>

            <div class="timeline-item-modern" data-year="2021">
                <div class="timeline-content-modern">
                    <div class="timeline-header">
                        <h4>Expansión Internacional</h4>
                        <span class="timeline-year">2021</span>
                    </div>
                    <p>Primer proyecto en Costa Rica - Colaboración centroamericana</p>
                </div>
            </div>

            <div class="timeline-item-modern" data-year="2024">
                <div class="timeline-content-modern">
                    <div class="timeline-header">
                        <h4>Estudio Consolidado</h4>
                        <span class="timeline-year">2024</span>
                    </div>
                    <p>Oficina en Punta Cana - Equipo de 5 profesionales</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="proyectos" class="portfolio-modern">
     <div class="container">
        <div class="text-center mb-5">
            <div class="section-badge">
                <Icon Name="IconName.Grid3X3Gap" class="me-2" />
                Portfolio
            </div>
            <h2 class="section-title-modern">
                Proyectos que definen 
                <span class="highlight">mi visión</span>
            </h2>
        </div>
        
        <div class="portfolio-filter-modern mb-5">
            <button class="filter-btn-modern active" data-filter="all">Todos</button>
            <button class="filter-btn-modern" data-filter="residential">Residencial</button>
            <button class="filter-btn-modern" data-filter="commercial">Comercial</button>
            <button class="filter-btn-modern" data-filter="cultural">Cultural</button>
        </div>

        <div class="portfolio-grid-modern">
            <div class="portfolio-card-modern residential">
                <div class="card-image-container">
                    <img src="https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                         alt="Casa Los Álamos" class="card-image" />
                    <div class="card-overlay">
                        <Button Color="ButtonColor.Light" Class="view-btn">
                            <Icon Name="IconName.Eye" class="me-2" />
                            Ver Proyecto
                        </Button>
                    </div>
                </div>
                <div class="card-content">
                    <div class="card-meta">
                        <span class="category">Residencial</span>
                        <span class="year">2023</span>
                    </div>
                    <h4 class="project-title">Casa Familiar Los Álamos</h4>
                    <p class="project-description">Una vivienda que abraza la naturaleza tropical</p>
                    <div class="project-tags">
                        <span class="tag">Santiago, RD</span>
                        <span class="tag">350m²</span>
                    </div>
                </div>
            </div>

            <div class="portfolio-card-modern commercial">
                <div class="card-image-container">
                    <img src="https://images.unsplash.com/photo-1600047509358-9dc75507daeb?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                         alt="Oficinas Bambú" class="card-image" />
                    <div class="card-overlay">
                        <Button Color="ButtonColor.Light" Class="view-btn">
                            <Icon Name="IconName.Eye" class="me-2" />
                            Ver Proyecto
                        </Button>
                    </div>
                </div>
                <div class="card-content">
                    <div class="card-meta">
                        <span class="category">Comercial</span>
                        <span class="year">2022</span>
                    </div>
                    <h4 class="project-title">Oficinas Centrales Bambú</h4>
                    <p class="project-description">Arquitectura corporativa con identidad caribeña</p>
                    <div class="project-tags">
                        <span class="tag">Santo Domingo</span>
                        <span class="tag">1200m²</span>
                    </div>
                </div>
            </div>

            <div class="portfolio-card-modern cultural">
                <div class="card-image-container">
                    <img src="https://images.unsplash.com/photo-1600566753086-00f18fb6b3ea?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                         alt="Centro Cultural Moca" class="card-image" />
                    <div class="card-overlay">
                        <Button Color="ButtonColor.Light" Class="view-btn">
                            <Icon Name="IconName.Eye" class="me-2" />
                            Ver Proyecto
                        </Button>
                    </div>
                </div>
                <div class="card-content">
                    <div class="card-meta">
                        <span class="category">Cultural</span>
                        <span class="year">2021</span>
                    </div>
                    <h4 class="project-title">Centro Cultural Moca</h4>
                    <p class="project-description">Espacio comunitario que celebra la cultura local</p>
                    <div class="project-tags">
                        <span class="tag">Moca, RD</span>
                        <span class="tag">800m²</span>
                    </div>
                </div>
            </div>

            <div class="portfolio-card-modern residential">
                <div class="card-image-container">
                    <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                         alt="Villa Coral" class="card-image" />
                    <div class="card-overlay">
                        <Button Color="ButtonColor.Light" Class="view-btn">
                            <Icon Name="IconName.Eye" class="me-2" />
                            Ver Proyecto
                        </Button>
                    </div>
                </div>
                <div class="card-content">
                    <div class="card-meta">
                        <span class="category">Residencial</span>
                        <span class="year">2024</span>
                    </div>
                    <h4 class="project-title">Villa Coral</h4>
                    <p class="project-description">Lujo tropical con vista al Caribe</p>
                    <div class="project-tags">
                        <span class="tag">Punta Cana</span>
                        <span class="tag">450m²</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-5">
            <Button Color="ButtonColor.Primary" 
                    Size="ButtonSize.Large" 
                    Class="btn-primary-modern">
                Ver Portafolio Completo
                <Icon Name="IconName.ArrowRight" class="ms-2" />
            </Button>
        </div>
    </div>
</section>

<section id="contacto" class="contact-modern">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="contact-info-modern">
                    <div class="section-badge">
                        <Icon Name="IconName.ChatDots" Class="me-2" />
                        Contacto
                    </div>
                    <h2 class="section-title-modern">
                        Hablemos de tu
                        <span class="highlight">próximo proyecto</span>
                    </h2>
                    <p class="section-description">
                        ¿Tienes una idea? Me encantaría conocer tu historia y trabajar juntos 
                        para crear algo extraordinario.
                    </p>
                    
                    <div class="contact-methods-modern">
                        <div class="contact-item-modern">
                            <div class="contact-icon-modern">
                                <Icon Name="IconName.GeoAlt" />
                            </div>
                            <div class="contact-details-modern">
                                <span class="contact-label">Ubicación</span>
                                <span class="contact-value">Bávaro, Punta Cana<br>República Dominicana</span>
                            </div>
                        </div>
                        
                        <div class="contact-item-modern">
                            <div class="contact-icon-modern">
                                <Icon Name="IconName.Telephone" />
                            </div>
                            <div class="contact-details-modern">
                                <span class="contact-label">Teléfono</span>
                                <span class="contact-value">+1 829 xxx xxxx</span>
                            </div>
                        </div>
                        
                        <div class="contact-item-modern">
                            <div class="contact-icon-modern">
                                <Icon Name="IconName.Envelope" />
                            </div>
                            <div class="contact-details-modern">
                                <span class="contact-label">Email</span>
                                <span class="contact-value">hola@alejandromartinez.com</span>
                            </div>
                        </div>
                    </div>

                    <div class="social-section-modern">
                        <h6>Sígueme en redes</h6>
                        <div class="social-links-modern">
                            <a href="#" class="social-link-modern">
                                <Icon Name="IconName.Instagram" />
                            </a>
                            <a href="#" class="social-link-modern">
                                <Icon Name="IconName.Linkedin" />
                            </a>
                            <a href="#" class="social-link-modern">
                                <Icon Name="IconName.Palette" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6">
                <div class="contact-form-modern">
                    <form>
                        <div class="form-row">
                            <div class="form-group">
                                <label>Nombre</label>
                                <input type="text" class="form-control-modern" placeholder="Tu nombre" />
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" class="form-control-modern" placeholder="tu@email.com" />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label>Tipo de proyecto</label>
                            <select class="form-control-modern">
                                <option>Selecciona una opción</option>
                                <option>Casa familiar</option>
                                <option>Apartamento</option>
                                <option>Oficina/Comercial</option>
                                <option>Remodelación</option>
                                <option>Otro</option>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label>Mensaje</label>
                            <textarea class="form-control-modern" rows="5" 
                                      placeholder="Cuéntame sobre tu proyecto..."></textarea>
                        </div>
                        
                        <Button Color="ButtonColor.Primary" 
                                Size="ButtonSize.Large" 
                                Class="btn-primary-modern w-100">
                            <Icon Name="IconName.Send" class="me-2" />
                            Enviar Mensaje
                        </Button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    private async Task ScrollToProyectos()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("scrollToElement", "proyectos");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error navegando a proyectos: {ex.Message}");
        }
    }

    private async Task ScrollToContacto()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("scrollToElement", "contacto");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error navegando a contacto: {ex.Message}");
        }
    }

    private async Task ScrollToSobreMi()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("scrollToElement", "sobre-mi");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error navegando a sobre mí: {ex.Message}");
        }
    }
}